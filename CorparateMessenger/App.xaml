<Application x:Class="CorparateMessenger.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:CorparateMessenger"
             xmlns:hc="https://handyorg.github.io/handycontrol"
             StartupUri="Views/LoginView.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <hc:ThemeResources/>
                <hc:Theme/>

                <ResourceDictionary Source="Themes/ChatItem.xaml"/>
                <ResourceDictionary Source="Themes/MessageItem.xaml"/>
                <ResourceDictionary Source="Themes/MenuItemCustom.xaml"/>
                <ResourceDictionary Source="Themes/IconButton.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>